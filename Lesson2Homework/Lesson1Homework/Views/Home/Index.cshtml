@model IEnumerable<Lesson1Homework.Models.EmployeeView>


<!DOCTYPE html>
<html lang="en">

<body>

    <table>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.Patronymic</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
            </tr>
        }
    </table>
    @section top{
        @await Html.PartialAsync("Partial/_Slider");
    }

    <div class="row">
        <div class="col-sm-3">
            @await Html.PartialAsync("Partial/_LeftSidebar");
        </div>

        <div class="col-sm-9 padding-right">
            @await Html.PartialAsync("Partial/_Featured");

            @await Html.PartialAsync("Partial/_Category");

            @await Html.PartialAsync("Partial/_Recommended");

        </div>
    </div>



</body>
</html>

